Showing Tasks of <%= current_user.email %> <br> <br>

<%= link_to "New task", new_task_path, class: "btn btn-info"%>
<%= link_to "Home page", root_path, class: "btn btn-info" %> <br> <br>

<b><strong> Sort By </b></strong>
<%= form_tag(tasks_path, :method => :get) do %>
		<%= select_tag(:filter, options_for_select(["Priority", "Latest"]), {:prompt => "Sort events", onchange: "this.form.submit();", :class => "form-control filter-bar dropdown-toggle"})%>
<% end %>


<table class = "table table-bordered">
<thead>
<td><strong><u>Title </u></strong></td>
<td><strong><u>Description</u></strong></td>
<td><strong><u>Priority</u></strong></td>
<td><strong><u>Created at</u></strong></td>
<td><strong><u>Want to Edit?</u></strong></td>
<td><strong><u>Want to delete?</u></strong></td>
</thead>
<tbody>
<% @tasks.each do|t| %>
	<tr>
		<td><%= t.title %></td>
		<td><%= t.description %></td>
		<td><%= t.priority %></td>
		<td><%= t.created_at %></td>
		<td><%= link_to "Edit", edit_task_path(t), class: "btn btn-warning" %></td>
		<td><%= link_to "Delete", task_path(t), method: :delete, class: "btn btn-danger" %></td>
	</tr>	
<% end %> 
</tbody>
</table>



